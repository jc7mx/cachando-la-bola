---
import { SITE_TITLE } from "../consts";
import HeaderLink from "./HeaderLink.astro";
import { Image } from 'astro:assets';
import logo from '../assets/logo-deportes-cachando-la-bola.webp';
---

<header>
	<nav>
		<h2>
			<a href="/" class="brand-link">
				<Image 
					src={logo} 
					alt="Logo Cachando la Bola" 
					width={40} 
					height={40} 
					class="header-logo"
				/>
				{SITE_TITLE}
			</a>
		</h2>
		
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/acerca-de">Acerca de</HeaderLink>
		</div>

		<div class="social-links">
			<a href="https://www.facebook.com/cachandolabola" target="_blank">
				<span class="sr-only">Facebook</span>
				<svg viewBox="0 0 24 24" aria-hidden="true" width="32" height="32" fill="currentColor">
					<path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
				</svg>
			</a>
			<a href="https://x.com/cachandolabola" target="_blank">
				<span class="sr-only">X (Twitter)</span>
				<svg viewBox="0 0 24 24" aria-hidden="true" width="32" height="32" fill="currentColor">
					<path d="M18.901 1.153h3.68l-8.04 9.19L24 22.846h-7.406l-5.8-7.584-6.638 7.584H.474l8.6-9.83L0 1.154h7.594l5.243 6.932ZM17.61 20.644h2.039L6.486 3.24H4.298Z"/>
				</svg>
			</a>
		</div>
	</nav>
</header>

<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	
	/* ESTILOS NUEVOS: Para alinear logo y texto */
	.brand-link {
		display: flex;
		align-items: center;
		gap: 10px; /* Separaci√≥n entre el logo y el texto */
		font-weight: bold;
		color: var(--black);
	}
	
	.header-logo {
		border-radius: 50%; /* Lo hace redondo */
		object-fit: cover;
	}

	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>